{
  "name": "OpenROVCockpit",
  "version": "0.0.1",
  "description": "Desktop application for controlling OpenROV devices",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenROV/cockpit-electron.git"
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "build --dir",
    "clean": "rimraf lib dist",
    "dist": "build",
    "release": "build"    
  },
  "author": "brianadams",
  "license": "ISC",
  "devDependencies": {
    "electron": "^1.6.0",
    "electron-builder": "^13.0.0"
  },
  "build": {
    "electronVersion": "1.6.0",
    "appId": "com.openrov.cockpit.extender",
    "npmSkipBuildFromSource": true,
    "publish": ["github"],
    "mac" : {
      "target" : [
        "dmg"
      ]
    },
    "linux" : {
      "target" : [
        "AppImage"
      ]
    },
    "win" : {
      "target" : [
        "7z"
      ]
    }    
  },
  "dependencies": {
    "electron-log": "^1.3.0",
    "electron-updater": "^1.4.2",
    "zeromq": "^4.1.1"
  }
}
